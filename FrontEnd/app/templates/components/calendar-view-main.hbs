<!--This is for all of the tiles that can hold classes that are scheduled. First, we check if the week is the current week (first row)-->

<!--If  it is the current week, find out what the current day is and fill the dates in based on that-->
{{#if thisWeek}}
<!--Find out what day we are in and use it to get the correct dates for API pulls-->
{{#if (dayCheck (format-date 'dddd')  'Sunday')}}
{{logo-tile logo=false date=(format-date 'MMMM Do YYYY')}}
{{day-tile  redDay = true  date=(format-date 'formatTime' 'MMMM Do YYYY')}}
{{day-tile                  date=(format-date 'formatTime' (format-date 'addTime' 1))}}
{{day-tile  redDay = true  date=(format-date 'formatTime' (format-date 'addTime' 2))}}
{{day-tile                  date=(format-date 'formatTime' (format-date 'addTime' 3))}}
{{day-tile  redDay = true  date=(format-date 'formatTime' (format-date 'addTime' 4))}}
{{day-tile                  date=(format-date 'formatTime' (format-date 'addTime' 5))}}
{{day-tile  redDay = true  date=(format-date 'formatTime' (format-date 'addTime' 6))}}


{{else if (dayCheck (format-date 'dddd')  'Monday')}}
{{logo-tile logo=false date=(format-date 'subtractTime' 1)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 1)}}
{{day-tile                date = (format-date)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 1)}}
{{day-tile                date = (format-date 'addTime' 2)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 3)}}
{{day-tile                date = (format-date 'addTime' 4)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 5)}}

{{else if (dayCheck (format-date 'dddd')  'Tuesday')}}
{{logo-tile logo=false date=(format-date 'subtractTime' 2)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 2)}}
{{day-tile                date = (format-date 'subtractTime' 1)}}
{{day-tile  redDay = true  date = (format-date)}}
{{day-tile                date = (format-date 'addTime' 1)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 2)}}
{{day-tile                date = (format-date 'addTime' 3)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 4)}}

{{else if (dayCheck (format-date 'dddd')  'Wednesday')}}
{{logo-tile logo=false date=(format-date 'subtractTime' 3)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 3)}}
{{day-tile                date = (format-date 'subtractTime' 2)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 1)}}
{{day-tile                date = (format-date)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 1)}}
{{day-tile                date = (format-date 'addTime' 2)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 3)}}



{{else if (dayCheck (format-date 'dddd')  'Thursday')}}
{{logo-tile logo=false date=(format-date 'subtractTime' 4)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 4)}}
{{day-tile                date = (format-date 'subtractTime' 3)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 2)}}
{{day-tile                date = (format-date 'subtractTime' 1)}}
{{day-tile  redDay = true  date = (format-date)}}
{{day-tile                date = (format-date 'addTime' 1)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 2)}}

{{else if (dayCheck (format-date 'dddd')  'Friday')}}
{{logo-tile logo=false date=(format-date 'subtractTime' 5)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 5)}}
{{day-tile                date = (format-date 'subtractTime' 4)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 3)}}
{{day-tile                date = (format-date 'subtractTime' 2)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 1)}}
{{day-tile                date = (format-date)}}
{{day-tile  redDay = true  date = (format-date 'addTime' 1)}}

{{else if (dayCheck (format-date 'dddd')  'Saturday')}}
{{logo-tile logo=false date=(format-date 'subtractTime' 6)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 6)}}
{{day-tile                date = (format-date 'subtractTime' 5)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 4)}}
{{day-tile                date = (format-date 'subtractTime' 3)}}
{{day-tile  redDay = true  date = (format-date 'subtractTime' 2)}}
{{day-tile                date = (format-date 'subtractTime' 1)}}
{{day-tile  redDay = true  date = (format-date)}}

{{/if}}


<!--If we are in week 2,3,4 pass the day into format date as the second parameter-->
{{else if weekTwo}}
{{logo-tile logo = false date=(format-date 'W2' 'Su')}}
{{day-tile redDay = true date = (format-date 'W2' 'Su')}}
{{day-tile               date = (format-date 'W2' 'M')}}
